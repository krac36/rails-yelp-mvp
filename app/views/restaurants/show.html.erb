<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %> -
      <%= review.rating %>/5 stars
    </li>
  <% end %>
</ul>
<br>


<div>
  <%= link_to 'New review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary'%> |
  <%= link_to "Back to restaurants", root_path, class: 'btn btn-primary' %>
</div>
